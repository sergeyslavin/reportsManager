- title "Templates"

- unless @templates.empty?
  %h1 Listing templates

  %table.table
    %tr
      %th{width: "800"} Title
      %th{colspan:"3"}

    - @templates.each do |template|
      %tr
        %td= template.title
        %td= link_to 'Show', [:admin, template], class:"btn btn-success"
        %td= link_to 'Edit', edit_admin_template_path(template), class:"btn btn-info"
        %td= link_to 'Destroy', [:admin, template], :method => :delete, :data => { :confirm => 'Are you sure?' }, class:"btn btn-danger"
- else
  %h1 Reports does not exists!

%br

= link_to 'New Template', new_admin_template_path, class:"btn btn-primary"
