<h1>Listing reports</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= link_to 'Show', admin_report_path(report) %></td>
        <td><%= link_to 'Edit', edit_admin_report_path(report) %></td>
        <td><%= link_to 'Destroy', admin_report_path(report), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_admin_report_path %>
