%h1 Listing reports

%table.table
  %thead
    %tr
      %th Title
      %th{colspan:"3"}
    %tr
  %thead

  %tbody
    - @reports.each do |report|
      %tr
        %td= report.title
        %td= link_to 'Show', report
        %td= link_to 'Edit', edit_report_path(report)
        %td= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }
  %br/

= link_to 'New Report', templates_reports_path
